<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppClientTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccentClient</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkClient</item>
        <item name="colorAccent">@color/colorAccentClient</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:actionBarStyle">@style/AppClientTheme.ActionBarStyle</item>
        <item name="android:statusBarColor">@color/colorPrimaryDarkClient</item>
    </style>
</resources>
