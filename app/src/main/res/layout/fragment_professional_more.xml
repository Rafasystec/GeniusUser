<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.barcadero.geniususer.fragments.ProfessionalMoreFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivMoreProPhoto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/businessman_128"
                    />

                <TextView
                    android:id="@+id/tvMoreProName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/ivMoreProPhoto"
                    android:text="Nome Profissional"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMorePorArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvMoreProName"
                    android:layout_toEndOf="@+id/ivMoreProPhoto"
                    android:text="Area Profissional" />

                <TextView
                    android:id="@+id/tvMorePorDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvMorePorArea"
                    android:layout_toEndOf="@+id/ivMoreProPhoto"
                    android:text="05/05/2018" />
                <LinearLayout
                    android:id="@+id/llMoreProRate"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivStarRate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/star_rate_24" />
                    <ImageView
                        android:id="@+id/ivStarRate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/star_rate_24" />

                    <ImageView
                        android:id="@+id/ivStarRate3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/star_rate_24" />

                    <ImageView
                        android:id="@+id/ivStarRate4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/star_rate_24" />

                    <ImageView
                        android:id="@+id/ivStarRate5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/star_rate_24" />

                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                android:layout_toEndOf="@+id/ivMoreProPhoto"

                <include layout="@layout/view_professional_more_menu" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
