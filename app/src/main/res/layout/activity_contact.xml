<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.barcadero.geniususer.activities.ContactActivity">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:id="@+id/cabinetmaker"
        android:layout_height="85dp"
        android:layout_width="match_parent"
        android:clickable="true"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:background="@color/cardview_light_background"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        card_view:cardConerRadius="2dp"
        card_view:cardElevation="6dp"


        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="23dp"
                android:src="@drawable/whatsapp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:text="Falar pelo nosso Whatapp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textWhatAppNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textView2"
                android:text="+55 85 985635021"
                android:textSize="25sp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <!-- Forr email -->
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:id="@+id/cvEmailContactUs"
        android:layout_height="85dp"
        android:layout_width="match_parent"
        android:clickable="true"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:background="@color/cardview_light_background"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        card_view:cardConerRadius="2dp"
        card_view:cardElevation="6dp"


        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/ivEmailContactUs"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="23dp"
                android:src="@drawable/email_32" />

            <TextView
                android:id="@+id/tvEmailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ivEmailContactUs"
                android:layout_centerHorizontal="true"
                android:text="Envie-nos um e-mail para:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEmailContactUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/tvEmailText"
                android:text="contato@genius7.com.br"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
