<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutChronos"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/dialog_message_backgound"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tvMessageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/bootstrapAlertInforText"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <View
            android:id="@+id/viewDistance"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvMessageTitle"
            android:layout_marginTop="24dp"
            android:background="@android:color/darker_gray" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvMessageDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/bootstrapAlertInforText"
            android:textSize="18sp"
            android:textStyle="normal"
            />

        <View
            android:id="@+id/viewDistance2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvMessageTitle"
            android:layout_marginTop="24dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/no"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@android:color/white"
                android:textColor="@color/bootstrapAlertInforText"/>
            <Button
                android:id="@+id/btnYes"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@android:color/white"
                android:textColor="@color/bootstrapAlertInforText"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>