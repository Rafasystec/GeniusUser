            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/ivMechanics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/ivArrowMechanics"
                android:layout_marginStart="25dp"
                android:src="@drawable/mechanic" />

            <TextView
                android:id="@+id/tvMechanics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ivMechanics"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@+id/ivMechanics"
                android:text="Mecânica e Funilaria"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/arrow_right_drop_circle_outline"
                android:id="@+id/ivArrowMechanics" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
