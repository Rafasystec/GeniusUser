                android:layout_alignBottom="@+id/ivMasonry"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@+id/ivMasonry"
                android:text="Alvenaria e Acabamento"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/arrow_right_drop_circle_outline"
                android:id="@+id/ivArrowMasonry" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:id="@+id/cvPainting"
        android:layout_height="@dimen/largerLayoutOption"
        android:layout_width="match_parent"
        android:clickable="true"
        android:padding="5dp"
        android:background="@color/cardview_light_background"
        android:layout_marginBottom="5dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        card_view:cardConerRadius="2dp"
        card_view:cardElevation="6dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/ivPainting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
