        card_view:cardConerRadius="2dp"
        card_view:cardElevation="6dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/ivElectrician"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/ivArrowElectrician"
                android:layout_marginStart="25dp"
                android:src="@drawable/electricity" />

            <TextView
                android:id="@+id/tVelectrician"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ivElectrician"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@+id/ivElectrician"
                android:text="Eletricista"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/arrow_right_drop_circle_outline"
                android:id="@+id/ivArrowElectrician" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:id="@+id/cvCleaning"
        android:layout_height="@dimen/largerLayoutOption"
        android:layout_width="match_parent"
        android:clickable="true"
        android:padding="5dp"
        android:background="@color/cardview_light_background"
        android:layout_marginBottom="5dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        card_view:cardConerRadius="2dp"
        card_view:cardElevation="6dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/ivCleaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/ivArrowcleaning"
                android:layout_marginStart="25dp"
                android:src="@drawable/broom" />

            <TextView
                android:id="@+id/tvCleaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ivCleaning"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@+id/ivCleaning"
                android:text="Diaristas"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/arrow_right_drop_circle_outline"
                android:id="@+id/ivArrowcleaning" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:id="@+id/cvMasonry"
        android:layout_height="@dimen/largerLayoutOption"
        android:layout_width="match_parent"
        android:clickable="true"
        android:padding="5dp"
        android:background="@color/cardview_light_background"
        android:layout_marginBottom="5dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        card_view:cardConerRadius="2dp"
        card_view:cardElevation="6dp"

        >
        <RelativeLayout
