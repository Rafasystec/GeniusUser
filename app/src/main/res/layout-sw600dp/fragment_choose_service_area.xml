<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.barcadero.geniususer.fragments.ChooseServiceAreaFragment">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:id="@+id/cabinetmaker"
        android:layout_height="@dimen/largerLayoutOption"
        android:layout_width="match_parent"
        android:clickable="true"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/cardview_light_background"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        card_view:cardConerRadius="2dp"
        card_view:cardElevation="6dp"


        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/imageView2"
                android:layout_marginStart="23dp"
                android:src="@drawable/wood" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="Marcenaria"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/arrow_right_drop_circle_outline"
                android:id="@+id/imageView2" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:id="@+id/CVAirConditioning"
        android:layout_height="@dimen/largerLayoutOption"
        android:layout_width="match_parent"
        android:clickable="true"
        android:padding="5dp"
        android:background="@color/cardview_light_background"
        android:layout_marginBottom="5dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        card_view:cardConerRadius="2dp"
        card_view:cardElevation="6dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/ivAirConditioning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/tvAirConditioning"
                android:layout_marginStart="23dp"
                android:src="@drawable/air_conditioner_blue" />

            <TextView
                android:id="@+id/tvAirConditioning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ivArrow2"
                android:layout_marginStart="27dp"
                android:layout_toEndOf="@+id/ivAirConditioning"
                android:text="Ar Condicionado"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/arrow_right_drop_circle_outline"
                android:id="@+id/ivArrow2" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:id="@+id/CVElectrician"
        android:layout_height="@dimen/largerLayoutOption"
        android:layout_width="match_parent"
        android:clickable="true"
        android:padding="5dp"
